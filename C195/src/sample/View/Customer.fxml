<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.CustomerController">
   <children>
      <Label layoutX="280.0" layoutY="14.0" text="Customers">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="customersTableView" layoutX="35.0" layoutY="63.0" prefHeight="261.0" prefWidth="630.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="42.0" text="ID" />
          <TableColumn fx:id="nameCol" prefWidth="91.0" text="Name" />
            <TableColumn fx:id="addressCol" prefWidth="109.0" text="Address" />
            <TableColumn fx:id="divisionCol" prefWidth="120.0" text="Division" />
            <TableColumn fx:id="countryCol" prefWidth="81.0" text="Country" />
            <TableColumn fx:id="postalCodeCol" prefWidth="76.0" text="Postal Code" />
            <TableColumn fx:id="phoneCol" prefWidth="110.0" text="Phone" />
        </columns>
      </TableView>
      <Button fx:id="addBtn" layoutX="261.0" layoutY="338.0" mnemonicParsing="false" onAction="#addCustomerBtnClicked" text="Add" />
      <Button layoutX="313.0" layoutY="338.0" mnemonicParsing="false" onAction="#updateCustomerBtnClicked" text="Update" />
      <Button fx:id="deleteBtn" layoutX="382.0" layoutY="338.0" mnemonicParsing="false" onAction="#deleteBtnClicked" text="Delete" />
      <Button layoutX="35.0" layoutY="19.0" mnemonicParsing="false" onAction="#backBtnClicked" text="Back" />
   </children>
</AnchorPane>
